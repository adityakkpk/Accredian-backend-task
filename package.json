{
  "name": "referral-api",
  "version": "1.0.0",
  "description": "A Node.js application for handling referral form data with RESTful APIs, MySQL database connectivity using Prisma ORM, error handling, and email notifications.",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "lint": "eslint . --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "body-parser": "1.20.3",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "express": "4.18.2",
    "nodemailer": "6.10.0"
  },
  "devDependencies": {
    "@prisma/client": "6.3.1",
    "@types/body-parser": "1.19.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "18.19.76",
    "@types/nodemailer": "6.4.17",
    "prisma": "6.3.1",
    "typescript": "5.0.4"
  },
  "author": "Aditya"
}
